{
  "manifest_version": 3,
  "name": "OPU NSKAL",
  "version": "1",
  "description": "Upload files and fetch gallery links from OPU",
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://opu.peklo.biz/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
